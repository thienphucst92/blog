<div class="container">
  <h1>Posts</h1>

  <div class="table">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Created at</th>
          <th>Body</th>
          <th>Author</th>
          <th>Views</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= time_ago_in_words(post.created_at) %></td>
            <td><%= @markdown.render(post.body).html_safe %></td>
            <td><%= post.created_by %></td>
            <td><%= post.views %></td>
            <td><%= link_to 'Show', post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <br>
</div>
