<div class="container">
  <h1>Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Created at</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= time_ago_in_words(post.created_at) %></td>
          <td><%= @markdown.render(post.body).html_safe %></td>
          <td><%= link_to 'Show', post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
