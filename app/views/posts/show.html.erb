<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% if user_signed_in? %>
  <% if @post.user_id == current_user.id %>
    <td><%= link_to 'Edit', edit_post_path(@post) %></td>
    <td><%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %></td>
    <td><%= link_to 'Back', posts_path %></td>
  <% end %>
<% end %>

<h3>Comments</h3>
<%= render @post.comments %>

<%= render 'comments/form' %>
