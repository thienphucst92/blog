<p><%= comment.content %></p>
<p><em>by<em> <strong><%= comment.created_by %></strong></p>

<% if user_signed_in? %>
  <% if comment.user_id == current_user.id %>
    <%= link_to 'Edit', edit_post_comment_path(comment.post, comment), class: "btn btn-success" %>
    <%= link_to 'Delete', post_comment_path(comment.post, comment), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>
  <% end %>
<% end %>
