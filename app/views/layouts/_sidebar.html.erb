<!-- Blog Sidebar Widgets Column -->
<div class="col-md-4">
  <!-- Blog Search Well -->
  <div class="well">
    <h4>Blog Search</h4>
    <div class="input-group">
      <%= form_tag(posts_path, :method => "GET", :id => "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
      <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>

  <!-- Blog Search Well -->
  <div class="well">
    <h4>Search by tags</h4>
    <div class="input-group">
      <%= form_tag(tags_path, :method => "GET", :id => "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Tag Name" %>
      <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>


  <!-- Blog Categories Well -->
  <div class="well">
    <h4>Tags</h4>
    <div class="row">
        <ul>
          <% tags = Tag.all %>

          <% tags.each do |tag|%>
            <li>
              <%= link_to tag.name, tag_path(tag.name) %>
            </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
